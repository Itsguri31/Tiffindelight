<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Tiffindelight.Views"
       x:Class="Tiffindelight.AppShell"
       Shell.FlyoutBehavior="Flyout">

    <!-- Define routes here -->
    <ShellContent Title="Login" Route="LoginView" ContentTemplate="{DataTemplate views:LoginView}" />
    <ShellContent Title="Home" Route="HomePage" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Title="Manage Orders" Route="ManageOrdersPage" ContentTemplate="{DataTemplate views:ManageOrdersPage}" />
    <ShellContent Title=" Manage Tiffin Menus" Route="Manage_Tiffin_Menus" ContentTemplate="{DataTemplate views:Manage_Tiffin_Menus}"/>
    <ShellContent Title="Manage Users" Route="ManageUsers" ContentTemplate="{DataTemplate views:ManageUsers}"/>
</Shell>
